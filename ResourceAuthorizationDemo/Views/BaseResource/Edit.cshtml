@using ResourceAuthorizationDemo.Models
@model BaseResourceModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Resource</h2>

@using (Html.BeginRouteForm("BaseResource", new { Id = Model.Id }))
{
    @Html.HttpMethodOverride(HttpVerbs.Put);
    <span>Resource Name:</span> @Html.TextBox("Name", Model.Name)<br />
    <input type="submit" value="update resource" />
}